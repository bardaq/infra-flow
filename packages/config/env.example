# Docker Environment Configuration for infra-flow
# IMPORTANT: Replace ALL placeholder values below!
# Copy this file to .env and update all values before starting Docker

# Application Environment
NODE_ENV=production

# PostgreSQL Database Configuration
POSTGRES_DB=infra_flow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_secure_password_here

# MinIO File Storage Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123_secure_password_here

# API Configuration
DATABASE_URL=postgresql://postgres:postgres_secure_password_here@postgres:5432/infra_flow
PORT=2022

# MinIO Client Configuration (for API)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123_secure_password_here

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://api:2022
NEXT_PUBLIC_TRPC_URL=http://localhost:2022/trpc

