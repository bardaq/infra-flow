{
  "name": "@infra-flow/api",
  "private": true,
  "type": "module",
  "exports": {
    "./rootRouter": "./src/rootRouter.ts",
    "./trpc": "./src/trpc.ts"
  },
  "scripts": {
    "build": "esbuild src/server.ts --bundle --packages=external --platform=node --format=esm --outdir=dist --sourcemap",
    "build:docker": "tsc",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint --cache src",
    "type-check": "tsc",
    "db:generate": "prisma generate --schema=src/db/schema.prisma",
    "db:migrate": "prisma migrate deploy --schema=src/db/schema.prisma"
  },
  "dependencies": {
    "@fastify/websocket": "^11.0.0",
    "@prisma/client": "^6.11.1",
    "@trpc/client": "npm:@trpc/client",
    "@trpc/react-query": "^11.4.3",
    "@trpc/server": "npm:@trpc/server",
    "fastify": "^5.0.0",
    "superjson": "^1.12.4",
    "tslib": "^2.8.1",
    "ws": "^8.0.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@types/ws": "^8.2.0",
    "esbuild": "^0.17.10",
    "eslint": "^9.26.0",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.11.1",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "version": "11.4.3"
}

