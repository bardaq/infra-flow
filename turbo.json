{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build:ts": {
      "dependsOn": ["^build:ts"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.build.json"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "clean:dist": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}

